# Server Configuration
PORT=3000
NODE_ENV=development

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraping Configuration
SCRAPING_DELAY_MS=1000
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_MS=10000

# Content Filtering
ENABLE_NSFW_FILTER=true
STRICT_MINOR_CONTENT_EXCLUSION=true

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL_MS=30000

# Security
CORS_ORIGIN=*
TRUST_PROXY=false

# Stremio Addon Configuration
ADDON_NAME=SukeNyaa
ADDON_DESCRIPTION=Unofficial Stremio addon for nyaa.si and sukebei.nyaa.si content
ADDON_VERSION=1.0.0
ADDON_LOGO=https://nyaa.si/static/img/avatar/default.png
ADDON_BACKGROUND=https://nyaa.si/static/img/logo.png

# External Services
NYAA_BASE_URL=https://nyaa.si
SUKEBEI_BASE_URL=https://sukebei.nyaa.si

# ========================================
# INTEGRATION CONFIGURATION
# ========================================

# TMDB Integration (The Movie Database)
# Get your API key at: https://www.themoviedb.org/settings/api
TMDB_ENABLED=true
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3
TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p
TMDB_PRIORITY=1
TMDB_CACHE_TIMEOUT=3600
TMDB_RATE_LIMIT_MS=250

# Stremio Extensions Integration
STREMIO_INTEGRATION_ENABLED=true
STREMIO_DETECTION_INTERVAL=300000
STREMIO_CROSS_REFERENCE=true
STREMIO_METADATA_SYNC=true
STREMIO_DISCOVERY_TIMEOUT=2000
# Comma-separated list of known extension URLs
STREMIO_KNOWN_EXTENSIONS=http://localhost:8080,http://localhost:7000

# Integration Fallback Behavior
FALLBACK_USE_ORIGINAL=true
FALLBACK_RETRY_ATTEMPTS=2
FALLBACK_RETRY_DELAY_MS=1000